<!--div class="center jumbotron"-->
 <br>
 <h1 class="center"><%= t('.update_user_info') %></h1>

 <div class="row">
   <div class="col-md-6 col-md-offset-3">
     <%= form_for(@user) do |f| %>
       <%= render 'shared/error_messages', object: f.object %>
       <%= f.label :name %>
       <%= f.text_field :name, class:"form-control" %>

       <%= f.label :email %>
       <%= f.email_field :email, class:"form-control" %>

       <%= f.label :preferred_locale %>
       <%= locales = I18n.available_locales.map {|loc| [loc.to_s, loc.to_s]}
           f.select :preferred_locale, locales, {}, {class: "form-control"} %>

       <% if @user.provider == 'local' %>
         <%= f.label :password %>
         <%= f.password_field :password, autocomplete: "off", class:"form-control" %>

         <%= f.label :password_confirmation, t('users.new.password_confirmation') %>
         <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
       <% end %>

       <%= f.submit t('.save_changes'), class: "btn btn-primary" %>
     <% end %>
   </div>
 </div>

</div>
